    <div class="tool-left">
      <div class="icon">{{ (t.title or ' ')[0]|upper }}</div>
    </div>
    <div class="tool-body">
      <div class="tool-head">
        <h3 style="margin:0">{{ t.title }}</h3>
        <div style="display:flex;gap:8px;align-items:center">
