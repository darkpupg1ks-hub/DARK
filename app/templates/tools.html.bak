{% extends 'base.html' %}
{% block content %}
<style>
  /* Hide admin floating sidebar/icons on public tools page (if present) */
  .admin-sidebar { display: none !important; }
  .admin-main { margin-right: 0 !important; }
  .tools-list { margin-top: 8px }
</style>
<h2 class="title">Tools & Downloads</h2>
<div class="tools-list">
  {% for t in tools %}
